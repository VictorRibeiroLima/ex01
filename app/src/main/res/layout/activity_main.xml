<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/country_name_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/country_name"
        android:textSize="@dimen/countryName_textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/tamanho"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:contentDescription="@string/flag_description"
        app:srcCompat="@drawable/flag" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/tamanho"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/meal_description"
        app:srcCompat="@drawable/meal" />

    <TextView

        android:id="@+id/country_meal_linear_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/countryMeal"
        android:textSize="@dimen/countryMeal_dimem" />
</LinearLayout>